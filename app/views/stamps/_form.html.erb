<%= simple_form_for(@stamp, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :Title %>
    <%= f.input :Description %>
    <%= f.input :Price %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list %>
  </div>

	<p>Image 1 (Main display picture)<br>
		<%=f.file_field :image %>
	</p>

  <p>Additional Images<br>
    <%=f.file_field :image2 %>
    <%=f.file_field :image3 %>
    <%=f.file_field :image4 %>
  </p>

  <div>
    <%= f.input :notes %>
  </div>

<!-- CATEGORIES CHECKBOXES
  <% for category in Category.find(:all) %>
<div>
  <%= check_box_tag "category", category.id %>
  <%= category.name %>
</div>
<% end %>
-->

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
